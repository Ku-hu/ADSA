#include <stdio.h>
#include <limits.h>

#define MAX 30

int parent[MAX];

// ---------- KRUSKAL HELPERS ----------
int find(int i) {
    while (parent[i])
        i = parent[i];
    return i;
}

int union_set(int i, int j) {
    if (i != j) {
        parent[j] = i;
        return 1;
    }
    return 0;
}

// ---------- KRUSKAL'S ALGORITHM ----------
void kruskal(int n, int cost[MAX][MAX]) {
    int edges = 0, minCost = 0;
    int temp[MAX][MAX];

    // Copy cost matrix and handle no-edge case
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            temp[i][j] = (cost[i][j] == 0) ? INT_MAX : cost[i][j];

    printf("\n--- Kruskal's Algorithm ---\n");
    printf("Edges in the Minimum Spanning Tree:\n");

    while (edges < n - 1) {
        int min = INT_MAX, a = -1, b = -1, u, v;

        // find smallest edge
        for (int i = 0; i < n; i++)
            for (int j = 0; j < n; j++)
                if (temp[i][j] < min) {
                    min = temp[i][j];
                    a = u = i;
                    b = v = j;
                }

        u = find(u);
        v = find(v);

        if (union_set(u, v)) {
            printf("%d - %d : %d\n", a, b, min);
            edges++;
            minCost += min;
        }

        temp[a][b] = temp[b][a] = INT_MAX;
    }

    printf("Total Minimum Cost = %d\n", minCost);
}

// ---------- PRIM'S ALGORITHM ----------
void prim(int n, int cost[MAX][MAX]) {
    int visited[MAX] = {0};
    int edges = 0, minCost = 0;

    // Replace 0 with INT_MAX (no edge)
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            if (cost[i][j] == 0)
                cost[i][j] = INT_MAX;

    visited[0] = 1;

    printf("\n--- Prim's Algorithm ---\n");
    printf("Edges in the Minimum Spanning Tree:\n");

    while (edges < n - 1) {
        int min = INT_MAX, a = -1, b = -1;

        for (int i = 0; i < n; i++) {
            if (visited[i]) {
                for (int j = 0; j < n; j++) {
                    if (!visited[j] && cost[i][j] < min) {
                        min = cost[i][j];
                        a = i;
                        b = j;
                    }
                }
            }
        }

        if (a != -1 && b != -1) {
            printf("%d - %d : %d\n", a, b, min);
            visited[b] = 1;
            minCost += min;
            edges++;
        }
    }

    printf("Total Minimum Cost = %d\n", minCost);
}

// ---------- MAIN ----------
int main() {
    int n, cost[MAX][MAX];
    int choice;

    printf("Enter number of vertices: ");
    scanf("%d", &n);

    printf("Enter the cost adjacency matrix (0 if no edge):\n");
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            scanf("%d", &cost[i][j]);

    printf("\n1. Kruskal's Algorithm\n2. Prim's Algorithm\nEnter your choice: ");
    scanf("%d", &choice);

    for (int i = 0; i < MAX; i++)
        parent[i] = 0;

    switch (choice) {
        case 1:
            kruskal(n, cost);
            break;
        case 2:
            prim(n, cost);
            break;
        default:
            printf("Invalid choice!\n");
    }

    return 0;
}
